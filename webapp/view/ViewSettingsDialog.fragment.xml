<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<ViewSettingsDialog
		id="viewSettingsDialog"
		confirm=".onConfirmViewSettingsDialog">
		<sortItems>
			<ViewSettingsItem
				text="{i18n>masterSort1}"
				key="LastName"
				selected="true"/>
				<ViewSettingsItem
				text = "{i18n>masterSort3}"
				key= "FirstName"
			/>
			<ViewSettingsItem
				text="{i18n>masterSort2}"
				key="EmployeeID"/>
			
		</sortItems>
		<filterItems>
			<ViewSettingsFilterItem
				id="filterItems"
				text="{i18n>masterFilterName}"
				multiSelect="false">
				<items>
					<ViewSettingsItem
						id="viewFilter1"
						text="{i18n>masterFilter1}"
						key="City"/>
					<ViewSettingsItem
						id="viewFilter2"
						text="{i18n>masterFilter2}"
						key="Title"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
		<groupItems>
			<ViewSettingsItem
				text="{i18n>masterGroup1}"
				key="City"/>
		</groupItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>